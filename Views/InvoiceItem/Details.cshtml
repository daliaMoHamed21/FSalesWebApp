@model Core.Entities.InvoiceItem

@{
    ViewBag.Title = "Invoice Item Details";
}
<h2>Details</h2>

<div class="form-horizontal">
    <h4>Invoice Item</h4>
    <hr />
    <div class="form-group">
        <label class="control-label col-md-2 fw-bold">@Html.DisplayNameFor(model => model.Description)</label>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 fw-bold">@Html.DisplayNameFor(model => model.Price)</label>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Price)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 fw-bold">@Html.DisplayNameFor(model => model.Quantity)</label>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Quantity)
        </div>
    </div>
</div>
<div class="mt-3">
    @Html.ActionLink("Edit", "Edit", null, new { invoiceId = Model.InvoiceId }, new { @class = "btn btn-outline-warning" })
    @Html.ActionLink("Delete", "Delete", null, new { invoiceId = Model.InvoiceId }, new { @class = "btn btn-outline-danger" })
    @Html.ActionLink("Back to List", "Index", null, new { invoiceId = Model.InvoiceId }, new { @class = "btn btn-outline-primary" })
</div>
