@model Core.Entities.Customer

@{
    ViewBag.Title = "Delete Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Delete Customer</h2>

    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>ID</dt>
                <dd>@Model.Id</dd>
                <dt>Name</dt>
                <dd>@Model.Name</dd>
                <dt>Email</dt>
                <dd>@Model.Email</dd>
                <dt>Phone</dt>
                <dd>@Model.Phone</dd>
            </dl>
        </div>
        <div class="col-md-6">
            <h5 class="text-danger">Are you sure you want to delete this customer?</h5>

            @using (Html.BeginForm("DeleteConfirmed", "Customer", new { id = Model.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-dark ml-2" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
